<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>InitParamServlet</servlet-name>
    <servlet-class>InitParamServlet</servlet-class>

    <init-param>
      <param-name>title</param-name>
      <param-value>Servlet Config Demo</param-value>
    </init-param>

    <init-param>
      <param-name>configStyle</param-name>
      <param-value>XML</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>AnotherServlet</servlet-name>
    <servlet-class>AnotherServlet</servlet-class>

    <init-param>
      <param-name>title</param-name>
      <param-value>Another Servlet Config Demo</param-value>
    </init-param>

    <init-param>
      <param-name>configStyle</param-name>
      <param-value>Still XML</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>InitParamServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AnotherServlet</servlet-name>
    <url-pattern>/anotherservlet</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>author</param-name>
    <param-value>Kajal</param-value>
  </context-param>

  <context-param>
    <param-name>country</param-name>
    <param-value>India</param-value>
  </context-param>

</web-app>
